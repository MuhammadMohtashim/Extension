{
  "manifest_version": 3,
  "name": "Recruitment Agency Checker",
  "version": "1.0",
  "description": "Checks LinkedIn company names against a database and shows their rankings",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["*://*.linkedin.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}